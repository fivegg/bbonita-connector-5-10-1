<connector>
  <version>5.0</version>
  <connectorId>JasperReport - CreateReportFromDataBase</connectorId>
  <icon>jasper.png</icon>
  <categories>
    <category>
      <name>Jasper</name>
      <icon>org/bonitasoft/connectors/jasper/jasper.png</icon>
    </category>
  </categories>
  <inputs>
    <setter>
      <setterName>setDbDriver</setterName>
      <required/>
      <parameters>
        <string>com.mysql.jdbc.Driver</string>
      </parameters>
    </setter>
    <setter>
      <setterName>setJdbcUrl</setterName>
      <required/>
      <parameters>
        <string>jdbc:mysql://localhost/your_database_name</string>
      </parameters>
    </setter>
    <setter>
      <setterName>setUser</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setPassword</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setJrxmlFilePath</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setParameters</setterName>
      <parameters>
        <map/>
      </parameters>
    </setter>
    <setter>
      <setterName>setOutputFilePath</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setOutputFormat</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
  </inputs>
  <pages>
    <page>
      <pageId>DataBaseConfiguration</pageId>
      <widgets>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter"/>
          <labelId>dbDriver</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[2]"/>
          <labelId>jdbcUrl</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[3]"/>
          <labelId>user</labelId>
        </text>
        <password>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[4]"/>
          <labelId>password</labelId>
        </password>
      </widgets>
    </page>        
    <page>
      <pageId>ReportSettings</pageId>
      <widgets>        
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[5]"/>
          <labelId>jrxmlFilePath</labelId>
        </text>
        <array>
          <labelId>parameters</labelId>
          <cols>2</cols>
          <rows>0</rows>
          <fixedCols>true</fixedCols>
          <fixedRows>false</fixedRows>
          <colsCaptions>
            <string>name</string>
            <string>value</string>
          </colsCaptions>
          <setter reference="/connector/inputs/setter[6]"/>
        </array>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[7]"/>
          <labelId>outputFilePath</labelId>
        </text>
        <select>
          <values>
            <entry>
              <string>PDF</string>
              <string>pdf</string>
            </entry>
            <entry>
              <string>HTML</string>
              <string>html</string>
            </entry>
            <entry>
              <string>XML</string>
              <string>xml</string>
            </entry>
          </values>
          <editable>false</editable>
          <top>
            <label>PDF</label>
            <value>pdf</value>
          </top>
          <setter reference="/connector/inputs/setter[8]"/>
          <labelId>outputFormat</labelId>
        </select>      
      </widgets>
    </page>
  </pages>
</connector>