<connector>
  <version>5.0</version>
  <connectorId>SugarCRM - CreateSugarOpportunity</connectorId>
  <icon>sugar.png</icon>
  <categories>
    <category>
      <name>Sugar</name>
      <icon>org/bonitasoft/connectors/sugar/sugar.png</icon>
    </category>
  </categories>
  <inputs>
    <setter>
      <setterName>setSugarSoapPort</setterName>
      <required/>
      <parameters>
        <string>http://127.0.0.1:8080/sugarcrm/service/v2/soap.php</string>
      </parameters>
    </setter>
    <setter>
      <setterName>setUser</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setPassword</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setApplicationName</setterName>
      <required/>
      <parameters>
        <string>myAppName</string>
      </parameters>
    </setter>
    <setter>
      <setterName>setName</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setAccountId</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setExpectedClosedDate</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setSalesStage</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setAmount</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setProbability</setterName>
      <required/>
      <parameters>
        <string></string>
      </parameters>
    </setter>
  </inputs>
  <outputs>
    <getter>
      <name>returnedId</name>
    </getter>
  </outputs>   
  <pages>
    <page>
      <pageId>SugarConfiguration</pageId>
      <widgets>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter"/>
          <labelId>sugarSoapPort</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[2]"/>
          <labelId>user</labelId>
        </text>
        <password>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[3]"/>
          <labelId>password</labelId>
        </password>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[4]"/>
          <labelId>applicationName</labelId>
        </text>
      </widgets>
    </page>        
    <page>
      <pageId>Parameters</pageId>
      <widgets>        
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[5]"/>
          <labelId>name</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[6]"/>
          <labelId>accountId</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[7]"/>
          <labelId>expectedClosedDate</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[8]"/>
          <labelId>salesStage</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[9]"/>
          <labelId>amount</labelId>
        </text>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[10]"/>
          <labelId>probability</labelId>
        </text>
      </widgets>
    </page>
  </pages>
</connector>