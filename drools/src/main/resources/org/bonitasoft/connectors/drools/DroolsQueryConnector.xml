<connector>
  <connectorId>DroolsQueryConnector</connectorId>
  <version>5.0</version>
  <icon>drools.gif</icon>
  <categories>
    <category>
      <name>Drools</name>
      <icon>org/bonitasoft/connectors/drools/drools.gif</icon>
    </category>
  </categories>
  <inputs>
    <setter>
      <setterName>setApiUrl</setterName>
      <required></required>
      <parameters>
        <string>http://localhost:8085/drools-camel-server-5.2.0.Final/kservice/rest/execute</string>
      </parameters>
    </setter>
    <setter>
      <setterName>setUsername</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setPassword</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setProxyHost</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setProxyPort</setterName>
      <parameters>
        <int>0</int>
      </parameters>
    </setter>
    <setter>
      <setterName>setProxyUsername</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setProxyPassword</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setConnectionTimeout</setterName>
      <parameters>
        <int>0</int>
      </parameters>
    </setter>
    <setter>
      <setterName>setReadTimeout</setterName>
      <parameters>
        <int>0</int>
      </parameters>
    </setter>
    <setter>
      <setterName>setKsessionName</setterName>
      <required></required>
      <parameters>
        <string>ksession1</string>
      </parameters>
    </setter>
    <setter>
      <setterName>setQueryName</setterName>
      <required></required>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setOutIdentifier</setterName>
      <required></required>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setArguments</setterName>
      <parameters>
        <list/>
      </parameters>
    </setter>
  </inputs>
  <outputs>
    <getter>
      <name>response</name>
      <metadata/>
    </getter>
    <getter>
      <name>status</name>
      <metadata/>
    </getter>
  </outputs>
  <pages>
    <page>
      <pageId>ServerInformation</pageId>
      <widgets>
      	<text>
          <labelId>apiUrl</labelId>
          <setter reference="/connector/inputs/setter[1]"/>
          <size>20</size>
          <maxChar>40</maxChar>
        </text>
        <text>
          <labelId>username</labelId>
          <setter reference="/connector/inputs/setter[2]"/>
          <size>20</size>
          <maxChar>40</maxChar>
        </text>
        <password>
          <labelId>password</labelId>
          <setter reference="/connector/inputs/setter[3]"/>
          <size>20</size>
          <maxChar>40</maxChar>
        </password>
        <group>
          <optional>true</optional>
          <labelId>proxy</labelId>
          <widgets>
            <text>
              <labelId>proxyHost</labelId>
              <setter reference="/connector/inputs/setter[4]"/>
              <size>20</size>
              <maxChar>100</maxChar>
            </text>
            <text>
              <labelId>proxyPort</labelId>
              <setter reference="/connector/inputs/setter[5]"/>
              <size>20</size>
              <maxChar>5</maxChar>
            </text>
            <text>
              <labelId>proxyUsername</labelId>
              <setter reference="/connector/inputs/setter[6]"/>
              <size>20</size>
              <maxChar>100</maxChar>
            </text>
            <password>
              <labelId>proxyPassword</labelId>
              <setter reference="/connector/inputs/setter[7]"/>
              <size>20</size>
              <maxChar>100</maxChar>
            </password>
          </widgets>
        </group>
        <group>
          <optional>true</optional>
          <labelId>timeouts</labelId>
          <widgets>
            <text>
              <labelId>connectionTimeout</labelId>
              <setter reference="/connector/inputs/setter[8]"/>
              <size>20</size>
              <maxChar>100</maxChar>
            </text>
            <text>
              <labelId>readTimeout</labelId>
              <setter reference="/connector/inputs/setter[9]"/>
              <size>20</size>
              <maxChar>100</maxChar>
            </text>
          </widgets>
        </group>
      </widgets>
    </page>
    <page>
      <pageId>Parameters</pageId>
      <widgets>
        
        <text>
          <labelId>ksessionName</labelId>
          <setter reference="/connector/inputs/setter[10]"/>
          <size>20</size>
          <maxChar>40</maxChar>
        </text>
        <text>
          <labelId>queryName</labelId>
          <setter reference="/connector/inputs/setter[11]"/>
          <size>20</size>
          <maxChar>40</maxChar>
        </text>
        <text>
          <labelId>outIdentifier</labelId>
          <setter reference="/connector/inputs/setter[12]"/>
          <size>20</size>
          <maxChar>40</maxChar>
        </text>
        <list>
          <labelId>arguments</labelId>
          <setter reference="/connector/inputs/setter[13]"/>
          <maxRows>0</maxRows>
        </list>
      </widgets>
    </page>
  </pages>
</connector>