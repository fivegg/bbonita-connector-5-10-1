<connector>
  <version>5.0</version>
  <connectorId>Oracle</connectorId>
  <icon>oracle.png</icon>
  <categories>
    <category>
      <name>Database</name>
      <icon>org/bonitasoft/connectors/database/database.png</icon>
    </category>
  </categories>
  <inputs>
    <setter>
      <setterName>setDatabase</setterName>
      <required></required>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setQuery</setterName>
      <required></required>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setUsername</setterName>
      <required></required>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setPassword</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setHostName</setterName>
      <required>oracleSID | oracleServiceName</required>
      <forbidden>oracleOCI</forbidden>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setPort</setterName>
      <required>oracleSID | oracleServiceName</required>
      <forbidden>oracleOCI</forbidden>
      <parameters>
        <int>4545</int>
      </parameters>
    </setter>
    <setter>
      <setterName>setOracleSID</setterName>
      <required></required>
      <parameters>
        <boolean>true</boolean>
      </parameters>
    </setter>
    <setter>
      <setterName>setOracleServiceName</setterName>
      <required></required>
      <parameters>
        <boolean>false</boolean>
      </parameters>
    </setter>
    <setter>
      <setterName>setOracleOCI</setterName>
      <required></required>
      <parameters>
        <boolean>false</boolean>
      </parameters>
    </setter>
  </inputs>
  <outputs>
    <getter>
      <name>rowSet</name>
    </getter>
  </outputs>
  <pages>
    <page>
      <pageId>db</pageId>
      <widgets>
        <text>
          <size>30</size>
          <maxChar>50</maxChar>
          <setter reference="/connector/inputs/setter"/>
          <labelId>database</labelId>
        </text>
        <text>
          <size>30</size>
          <maxChar>50</maxChar>
          <setter reference="/connector/inputs/setter[3]"/>
          <labelId>username</labelId>
        </text>
        <password>
          <size>30</size>
          <maxChar>50</maxChar>
          <setter reference="/connector/inputs/setter[4]"/>
          <labelId>password</labelId>
        </password>
        <text>
          <size>20</size>
          <maxChar>50</maxChar>
          <setter reference="/connector/inputs/setter[5]"/>
          <labelId>hostName</labelId>
        </text>
        <text>
          <size>5</size>
          <maxChar>5</maxChar>
          <setter reference="/connector/inputs/setter[6]"/>
          <labelId>port</labelId>
        </text>
        <radio>
          <name>type</name>
          <value>SID</value>
          <setter reference="/connector/inputs/setter[7]"/>
          <labelId>oracleSID</labelId>
        </radio>
        <radio>
          <name>type</name>
          <value>SN</value>
          <setter reference="/connector/inputs/setter[8]"/>
          <labelId>oracleServiceName</labelId>
        </radio>
        <radio>
          <name>type</name>
          <value>OCI</value>
          <setter reference="/connector/inputs/setter[9]"/>
          <labelId>oracleOCI</labelId>
        </radio>
      </widgets>
    </page>
    <page>
      <pageId>qry</pageId>
      <widgets>
        <textarea>
          <rows>10</rows>
          <columns>60</columns>
          <maxChar>600</maxChar>
          <maxCharPerRow>60</maxCharPerRow>
          <setter reference="/connector/inputs/setter[2]"/>
          <labelId>query</labelId>
        </textarea>
      </widgets>
    </page>
  </pages>
</connector>